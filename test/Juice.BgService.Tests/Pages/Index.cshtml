@page
@model Juice.BgService.Tests.Pages.IndexModel
@{
}
<script src="/lib/microsoft-signalr/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/loghub")
        .configureLogging(signalR.LogLevel.Information)
        .build();

    async function start() {
        try {
            await connection.start();
            console.log("SignalR Connected.");
        } catch (err) {
            console.log(err);
            setTimeout(start, 5000);
        }
    };

    connection.onclose(async () => {
        await start();
    });

    connection.on("LoggingAsync", (serviceId, traceId, category, message, level, contextual, scopes) => {
        console.log(`[${serviceId}] [${traceId}] ${category} ${level} ${message} - ${contextual}`, scopes);
    });

    connection.on("StateAsync", (serviceId, traceId, state, message) => {
        console.log(`[${serviceId}] [${traceId}] ${message} - ${state}`);
    });

    // Start the connection.
    start();
</script>